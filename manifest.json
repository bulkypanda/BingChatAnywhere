{
   "name": "BingChatAnywhere",
   "version": "1.0",
   "description": "Enable Bing Chat on unsupported browsers!",
   "update_url": "https://clients2.google.com/service/update2/crx",
   "permissions": ["webRequest", "webRequestBlocking", "https://www.bing.com/*"],
   "background": {
      "scripts": ["background.js"],
      "persistent": true
   },
   "browser_action": {
      "default_icon": {
         "32": "images/32.png",
         "48": "images/48.png",
         "64": "images/64.png",
         "128": "images/128.png"
      },
      "default_popup": "popup.html",
      "default_title": "BingChatAnywhere"
   },
   "icons": {
      "32": "images/32.png",
      "48": "images/48.png",
      "64": "images/64.png",
      "128": "images/128.png"
   },
   "manifest_version": 2
}

